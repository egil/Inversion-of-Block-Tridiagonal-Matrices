<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="GetDataFromDisk" value="true" />
    <add key="Matrix1FileName" value="m3000x3000-a.mat" />
    <add key="Matrix2FileName" value="m3000x3000-b.mat" />
    <add key="Matrix3FileName" value="m3000x3000-c.mat" />
    <add key="BTMFileName" value="ds100x100x500.btm" />

    <add key="MatrixRows" value="200" />
    <add key="MatrixColumns" value="200" />
    <add key="BTMSize" value="5" />
    <add key="BTMMinBlockSize" value="100" />
    <add key="BTMMaxBlockSize" value="200" />    
  </appSettings>

  <system.diagnostics>
    <sources>
      <source name="App" switchValue="ActivityTracing,Information">
        <listeners>
          <add name="console" />
          <remove name ="Default" />
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="console"
           type="System.Diagnostics.ConsoleTraceListener"
           initializeData="false"/>
    </sharedListeners>
    <trace autoflush="true"
           indentsize="4">
      <listeners>
        <add name="console" />
      </listeners>
    </trace>
  </system.diagnostics>

</configuration>
