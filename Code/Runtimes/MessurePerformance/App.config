<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="DataSetDirectory" value="C:\Users\eh\Documents\KU\Inversion-of-Block-Tridiagonal-Matrices\Dataset" />    
  </appSettings>
  <system.diagnostics>
    <sources>
      <source name="App" switchValue="Information">
        <listeners>
          <add name="file" />
          <add name="console" />
          <remove name ="Default" />
        </listeners>
      </source>
      <source name="BlockTridiagonalMatrixInverse"
              switchName="SourceSwitch"
              switchType="System.Diagnostics.SourceSwitch" >
        <listeners>
          <add name="file" />
          <add name="console" />
          <remove name ="Default" />
        </listeners>
      </source>
      <source name="Manager"               
              switchName="VerboseSwitch"
              switchType="System.Diagnostics.SourceSwitch" >
        <listeners>
          <add name="file" />
          <remove name ="Default" />
        </listeners>
      </source>
      <source name="MatrixOperations"
              switchName="SourceSwitch"
              switchType="System.Diagnostics.SourceSwitch" >
        <listeners>
          <add name="console" />
          <remove name ="Default" />
        </listeners>
      </source>
      <source name="PipelinedBlockTridiagonalMatrixInverse"
              switchName="VerboseSwitch"
              switchType="System.Diagnostics.SourceSwitch" >
        <listeners>
          <add name="file" />
          <!--<add name="console" />-->
          <remove name ="Default" />
        </listeners>
      </source>
      <source name="NonPipelinedBlockTridiagonalMatrixInverse"
              switchName="SourceSwitch"
              switchType="System.Diagnostics.SourceSwitch" >
        <listeners>
          <add name="file" />
          <add name="console" />
          <remove name ="Default" />
        </listeners>
      </source>
    </sources>
    <switches>
      <!-- You can set the level at which tracing is to occur -->
      <!--<add name="SourceSwitch" value="All" />
      <add name="VerboseSwitch" value="Information,ActivityTracing,Verbose" />-->
      <!-- You can turn tracing off -->
      <add name="VerboseSwitch" value="Off" />
      <add name="SourceSwitch" value="Off"  />
    </switches>
    <sharedListeners>
      <add name="console"
           type="System.Diagnostics.ConsoleTraceListener"
           initializeData="false"/>
      <add name="file"
           type="System.Diagnostics.DelimitedListTraceListener"
           delimiter=" : " initializeData="invertlog.txt" />
    </sharedListeners>
    <trace autoflush="true"
           indentsize="4">
      <listeners>
        <add name="console" />
        <add name="file" />
      </listeners>
    </trace>
  </system.diagnostics>
</configuration>
